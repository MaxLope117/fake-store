<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FakeStore</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FakeStore.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="py-7 px-4 mx-auto max-w-xl lg:pt-16 lg:px-6">
        <div class='mx-auto text-center mb-8 lg:mb-12'>
            <h2 class='mb-4 text-5xl tracking-tight font-extrabold text-white'>
                Fake Store API
            </h2>
            <p class='font-light text-gray-500 sm:text-xl dark:text-gray-400'>
                All products from Fake Store API
            </p>
        </div>
    </header>

    <div class="px-2 pb-8 mx-auto max-w-xl lg:px-4">
        <nav class='flex flex-col items-center justify-around w-full text-center md:flex-row'>
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                <label for="table-search" class="sr-only">Search</label>
                <form class="relative" asp-controller="Home" asp-action="Index" method="get">
                    <button type="submit"
                        class="absolute inset-y-0 rtl:inset-r-0 start-0 flex items-center ps-5 cursor-pointer">
                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                        </svg>
                    </button>
                    <input type="text" id="table-search" name="SearchString"
                        class="flex p-3 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        placeholder="Search for category" />
                </form>
            </div>
        </nav>

    </div>

    <div class="container mx-auto mb-6">
        <main role="main" class="flex justify-center">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center mb-8">
        <div class="mx-auto text-center">
            <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400 p-4">
                Learn about
                <a href="https://fakestoreapi.com">Fake Store API</a>.
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
